		{
			"name": "Get New Student Info",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Satus is 200\", ()=>{\r",
							"    pm.response.to.have.status(200)\r",
							"});\r",
							"\r",
							"pm.test.skip(\"Successful get request\", ()=>{\r",
							"    pm.expect(pm.response.code).to.be.oneOf([200,201]);\r",
							"});\r",
							"\r",
							"pm.test(\"Content-type headrer\", ()=>{\r",
							"    pm.response.to.have.header('Content-Type');\r",
							"});\r",
							"\r",
							"pm.test(\"Content-Type header type is application/json\", ()=>{\r",
							"    pm.expect(pm.response.headers.get('Content-Type')).to.eql('application/json');\r",
							"});\r",
							"\r",
							"pm.test(\"Cookie 'Cookie_1' is presesnt\", ()=>{\r",
							"    pm.expect(pm.cookies.has('Cookie_1')).to.be.true;\r",
							"});\r",
							"pm.test(\"Cookie 'Cookie_1' 'value' is presesnt\", ()=>{\r",
							"    pm.expect(pm.cookies.get('Cookie_1')).to.equal('value');\r",
							"});\r",
							"\r",
							"pm.test(\"Response time is below 20m\", ()=>{\r",
							"    pm.expect(pm.response.responseTime).to.be.below(20);\r",
							"});\r",
							"\r",
							"const jsonData = pm.response.json();\r",
							"pm.test(\"Test datatype of the response bosdy\",()=>{\r",
							"    pm.expect(jsonData).to.be.an(\"object\");\r",
							"    pm.expect(jsonData.name).to.be.a(\"string\");\r",
							"    pm.expect(jsonData.id).to.be.a(\"string\");\r",
							"    pm.expect(jsonData.courses).to.be.an(\"array\");\r",
							"});\r",
							"\r",
							"//test the array content.\r",
							"pm.test(\"Test the array properties\", ()=>{\r",
							"    pm.expect(jsonData.courses).to.include(\"C#\");\r",
							"    pm.expect(jsonData.courses).to.have.members([\"C#\", \"Selenium\"]);\r",
							"});\r",
							"\r",
							"//Validating json fields in response \r",
							"\r",
							"pm.test(\"Test value all response fields\", ()=>{\r",
							"    // pm.expect(jsonData.id).to.eql(\"{{id}}\");\r",
							"    pm.expect(jsonData.name).to.eql(\"Daren\");\r",
							"    pm.expect(jsonData.location).to.eql(\"France\");\r",
							"    pm.expect(jsonData.phone).to.eql(\"0989565899\");\r",
							"    pm.expect(jsonData.courses[0]).to.eql(\"C#\");\r",
							"});\r",
							"\r",
							"//Json schema validation\r",
							"const expectedJSONSchema ={\r",
							"  \"type\": \"object\",\r",
							"  \"properties\": {\r",
							"    \"id\": {\r",
							"      \"type\": \"string\"\r",
							"    },\r",
							"    \"name\": {\r",
							"      \"type\": \"string\"\r",
							"    },\r",
							"    \"location\": {\r",
							"      \"type\": \"string\"\r",
							"    },\r",
							"    \"phone\": {\r",
							"      \"type\": \"string\"\r",
							"    },\r",
							"    \"courses\": {\r",
							"      \"type\": \"array\",\r",
							"      \"items\": [\r",
							"        {\r",
							"          \"type\": \"string\"\r",
							"        },\r",
							"        {\r",
							"          \"type\": \"string\"\r",
							"        }\r",
							"      ]\r",
							"    }\r",
							"  },\r",
							"  \"required\": [\r",
							"    \"id\",\r",
							"    \"name\",\r",
							"    \"location\",\r",
							"    \"phone\",\r",
							"    \"courses\"\r",
							"  ]\r",
							"}\r",
							"pm.test(\"validate json schema\", ()=>{\r",
							"pm.response.to.have.jsonSchema(expectedJSONSchema)\r",
							"});"
						],
						"type": "text/javascript",
						"packages": {},
						"requests": {}
					}
				}
			],
